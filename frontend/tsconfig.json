{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "paths": {
      "$shared": [
        "./src/shared"
      ],
      "$shared/*": [
        "./src/shared/*"
      ],
      "$core": [
        "./src/core"
      ],
      "$core/*": [
        "./src/core/*"
      ],
      "$features": [
        "./src/features"
      ],
      "$features/*": [
        "./src/features/*"
      ],
      "$app": [
        "./src/app"
      ],
      "$app/*": [
        "./src/app/*"
      ],
      "$src": [
        "./src"
      ],
      "$src/*": [
        "./src/*"
      ],
      "$lib": [
        "./src/shared"
      ],
      "$lib/*": [
        "./src/shared/*"
      ]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}